@model RestaurantManagementSystem.ViewModels.OnlineOrderListViewModel
@{
    ViewData["Title"] = "Online Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Online Orders</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "OnlineOrder")">Online Orders Dashboard</a></li>
        <li class="breadcrumb-item active">Order List</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter me-1"></i>
            Filter Orders
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("Index", "OnlineOrder")">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="StatusId" class="form-label">Status</label>
                        <select id="StatusId" name="StatusId" class="form-select">
                            <option value="">All Statuses</option>
                            @foreach (var status in Model.OrderStatuses)
                            {
                                <option value="@status.Id" selected="@(Model.StatusId == status.Id)">@status.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="OrderSourceId" class="form-label">Order Source</label>
                        <select id="OrderSourceId" name="OrderSourceId" class="form-select">
                            <option value="">All Sources</option>
                            @foreach (var source in Model.OrderSources)
                            {
                                <option value="@source.Id" selected="@(Model.OrderSourceId == source.Id)">@source.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="SyncStatus" class="form-label">Sync Status</label>
                        <select id="SyncStatus" name="SyncStatus" class="form-select">
                            <option value="">All</option>
                            <option value="0" selected="@(Model.SyncStatus == 0)">Not Synced</option>
                            <option value="1" selected="@(Model.SyncStatus == 1)">Synced</option>
                            <option value="2" selected="@(Model.SyncStatus == 2)">Failed</option>
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="StartDate" class="form-label">Start Date</label>
                        <input type="date" id="StartDate" name="StartDate" class="form-control" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="EndDate" class="form-label">End Date</label>
                        <input type="date" id="EndDate" name="EndDate" class="form-control" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-8 mb-3">
                        <label for="SearchTerm" class="form-label">Search</label>
                        <input type="text" id="SearchTerm" name="SearchTerm" class="form-control" placeholder="Search by order #, customer name, phone..." value="@Model.SearchTerm" />
                    </div>
                    <div class="col-md-4 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                        <a href="@Url.Action("Index", "OnlineOrder")" class="btn btn-secondary">Clear Filters</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Online Orders
        </div>
        <div class="card-body">
            <table id="ordersTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>External ID</th>
                        <th>Source</th>
                        <th>Customer</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Type</th>
                        <th>Order Date</th>
                        <th>Delivery Time</th>
                        <th>Sync</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.OrderNumber</td>
                            <td>@order.ExternalOrderId</td>
                            <td>@order.OrderSourceName</td>
                            <td>@order.CustomerName</td>
                            <td>@order.CustomerPhone</td>
                            <td>
                                <span class="badge" style="background-color: @order.StatusColor">@order.StatusName</span>
                            </td>
                            <td>$@order.OrderTotal.ToString("F2")</td>
                            <td>@(order.IsDelivery ? "Delivery" : "Pickup")</td>
                            <td>@order.FormattedOrderDate</td>
                            <td>@(order.FormattedRequestedDeliveryTime ?? "-")</td>
                            <td>
                                @if (order.SyncStatus == 0)
                                {
                                    <span class="badge bg-secondary">Not Synced</span>
                                }
                                else if (order.SyncStatus == 1)
                                {
                                    <span class="badge bg-success">Synced #@order.SyncedToLocalOrderId</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Failed</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "OnlineOrder", new { id = order.Id })" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ordersTable').DataTable({
                order: [[8, 'desc']],
                pageLength: 25
            });
        });
    </script>
}
