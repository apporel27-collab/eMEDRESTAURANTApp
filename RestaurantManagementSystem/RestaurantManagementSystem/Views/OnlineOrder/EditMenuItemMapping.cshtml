@model RestaurantManagementSystem.ViewModels.ExternalMenuItemMappingViewModel
@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Menu Item Mapping" : "Add Menu Item Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@(Model.Id > 0 ? "Edit Menu Item Mapping" : "Add Menu Item Mapping")</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "OnlineOrder")">Online Orders Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("MenuItemMappings", "OnlineOrder")">Menu Item Mappings</a></li>
        <li class="breadcrumb-item active">@(Model.Id > 0 ? "Edit Mapping" : "Add Mapping")</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            @(Model.Id > 0 ? "Edit Menu Item Mapping" : "Add Menu Item Mapping")
        </div>
        <div class="card-body">
            <form asp-action="SaveMenuItemMapping" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3 row">
                    <label asp-for="MenuItemId" class="col-sm-3 col-form-label">Menu Item</label>
                    <div class="col-sm-9">
                        <select asp-for="MenuItemId" class="form-select">
                            <option value="">-- Select Menu Item --</option>
                            @foreach (var item in Model.MenuItems)
                            {
                                <option value="@item.Id" selected="@(item.Id == Model.MenuItemId)">
                                    @item.Name ($@item.Price.ToString("F2"))
                                </option>
                            }
                        </select>
                        <span asp-validation-for="MenuItemId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3 row">
                    <label asp-for="OrderSourceId" class="col-sm-3 col-form-label">Order Source</label>
                    <div class="col-sm-9">
                        <select asp-for="OrderSourceId" class="form-select">
                            <option value="">-- Select Order Source --</option>
                            @foreach (var source in Model.OrderSources)
                            {
                                <option value="@source.Id" selected="@(source.Id == Model.OrderSourceId)">
                                    @source.Name
                                </option>
                            }
                        </select>
                        <span asp-validation-for="OrderSourceId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3 row">
                    <label asp-for="ExternalItemId" class="col-sm-3 col-form-label">External Item ID</label>
                    <div class="col-sm-9">
                        <input asp-for="ExternalItemId" class="form-control" />
                        <span asp-validation-for="ExternalItemId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3 row">
                    <label asp-for="ExternalItemName" class="col-sm-3 col-form-label">External Item Name</label>
                    <div class="col-sm-9">
                        <input asp-for="ExternalItemName" class="form-control" />
                        <span asp-validation-for="ExternalItemName" class="text-danger"></span>
                        <small class="form-text text-muted">The name of the item on the external platform (leave blank to use local menu item name)</small>
                    </div>
                </div>
                
                <div class="mb-3 row">
                    <label asp-for="ExternalPrice" class="col-sm-3 col-form-label">External Price</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="ExternalPrice" class="form-control" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="ExternalPrice" class="text-danger"></span>
                        <small class="form-text text-muted">The price on the external platform (leave blank to use local menu item price)</small>
                    </div>
                </div>
                
                <div class="mb-3 row">
                    <div class="col-sm-3">Active</div>
                    <div class="col-sm-9">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Is Active</label>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3 row">
                    <div class="col-sm-9 offset-sm-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="MenuItemMappings" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
