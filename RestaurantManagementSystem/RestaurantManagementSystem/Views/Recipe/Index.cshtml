@model IEnumerable<RestaurantManagementSystem.Models.Recipe>

@{
    ViewData["Title"] = "Recipe Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Recipe Management</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <table id="recipesTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Menu Item</th>
                                <th>Recipe Title</th>
                                <th>Prep Time</th>
                                <th>Cooking Time</th>
                                <th>Last Updated</th>
                                <th>Version</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var recipe in Model)
                            {
                                <tr>
                                    <td>@recipe.MenuItem?.Name</td>
                                    <td>@recipe.Title</td>
                                    <td>@recipe.PreparationTimeMinutes min</td>
                                    <td>@recipe.CookingTimeMinutes min</td>
                                    <td>@recipe.LastUpdated.ToString("MM/dd/yyyy h:mm tt")</td>
                                    <td>@recipe.Version</td>
                                    <td>
                                        @if (recipe.IsArchived)
                                        {
                                            <span class="badge badge-secondary">Archived</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-sm btn-info">
                                                <i class="fa fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-sm btn-primary">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a asp-controller="Menu" asp-action="Details" asp-route-id="@recipe.MenuItemId" class="btn btn-sm btn-secondary">
                                                <i class="fa fa-utensils"></i> Menu Item
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#recipesTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "pageLength": 25,
                "columns": [
                    null, // Menu Item
                    null, // Recipe Title
                    null, // Prep Time
                    null, // Cooking Time
                    null, // Last Updated
                    null, // Version
                    null, // Status
                    { "orderable": false } // Actions
                ]
            });
        });
    </script>
}
