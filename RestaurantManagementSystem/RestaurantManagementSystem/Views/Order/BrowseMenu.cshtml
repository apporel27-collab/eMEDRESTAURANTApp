@model OrderViewModel
@{
    ViewData["Title"] = "Browse Menu";
}

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"] for Order #@Model.OrderNumber</h1>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Order
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs mb-4" id="menuTabs" role="tablist">
                @foreach (var category in Model.MenuCategories)
                {
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(Model.MenuCategories.First() == category ? "active" : "")" 
                                id="@category.CategoryId-tab" 
                                data-bs-toggle="tab" 
                                data-bs-target="#@category.CategoryId-content" 
                                type="button" 
                                role="tab" 
                                aria-controls="@category.CategoryId-content" 
                                aria-selected="@(Model.MenuCategories.First() == category ? "true" : "false")">
                            @category.CategoryName
                        </button>
                    </li>
                }
            </ul>
            
            <div class="tab-content" id="menuTabsContent">
                @foreach (var category in Model.MenuCategories)
                {
                    <div class="tab-pane fade @(Model.MenuCategories.First() == category ? "show active" : "")" 
                         id="@category.CategoryId-content" 
                         role="tabpanel" 
                         aria-labelledby="@category.CategoryId-tab">
                        
                        <div class="row g-3">
                            @foreach (var menuItem in category.MenuItems)
                            {
                                <div class="col-md-4 col-xl-3">
                                    <div class="card h-100">
                                        @if (!string.IsNullOrEmpty(menuItem.ImagePath))
                                        {
                                            <img src="@menuItem.ImagePath" class="card-img-top" alt="@menuItem.Name">
                                        }
                                        <div class="card-body">
                                            <h5 class="card-title">@menuItem.Name</h5>
                                            @if (!string.IsNullOrEmpty(menuItem.Description))
                                            {
                                                <p class="card-text">@menuItem.Description</p>
                                            }
                                            <p class="card-text"><strong>$@menuItem.Price.ToString("F2")</strong></p>
                                        </div>
                                        <div class="card-footer bg-white">
                                            <a asp-action="AddItem" asp-route-orderId="@Model.Id" asp-route-menuItemId="@menuItem.Id" class="btn btn-primary w-100">
                                                <i class="fas fa-plus"></i> Add to Order
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
