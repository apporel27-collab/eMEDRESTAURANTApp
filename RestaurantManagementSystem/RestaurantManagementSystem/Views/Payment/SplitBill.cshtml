@model CreateSplitBillViewModel
@{
    ViewData["Title"] = "Split Bill";
}

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Payment Management
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Split Bill for Order #@Model.OrderNumber</h5>
                </div>
                <div class="card-body">
                    <form asp-action="SplitBill" method="post" id="splitBillForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="OrderId" />
                        <input type="hidden" asp-for="OrderNumber" />
                        <input type="hidden" asp-for="Subtotal" />
                        <input type="hidden" asp-for="TaxAmount" />
                        <input type="hidden" asp-for="TotalAmount" />
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Select Items for Split Bill</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 5%">Select</th>
                                                        <th style="width: 45%">Item</th>
                                                        <th style="width: 20%">Available</th>
                                                        <th style="width: 20%">Quantity</th>
                                                        <th style="width: 10%">Price</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.AvailableItems.Any())
                                                    {
                                                        for (int i = 0; i < Model.AvailableItems.Count; i++)
                                                        {
                                                            var item = Model.AvailableItems[i];
                                                            <tr class="item-row" data-unit-price="@item.UnitPrice" data-item-id="@item.OrderItemId">
                                                                <td>
                                                                    <div class="form-check">
                                                                        <input class="form-check-input item-checkbox" type="checkbox" 
                                                                               id="item-@item.OrderItemId" 
                                                                               name="selectedItems" 
                                                                               value="@item.OrderItemId" 
                                                                               @(item.IsSelected ? "checked" : "")>
                                                                    </div>
                                                                </td>
                                                                <td>@item.Name</td>
                                                                <td>@item.AvailableQuantity of @item.Quantity</td>
                                                                <td>
                                                                    <input type="number" class="form-control form-control-sm item-quantity"
                                                                           name="itemQuantities" 
                                                                           min="1" 
                                                                           max="@item.AvailableQuantity" 
                                                                           value="@(item.IsSelected ? item.SelectedQuantity : 1)" 
                                                                           @(item.IsSelected ? "" : "disabled")>
                                                                </td>
                                                                <td>$@item.UnitPrice.ToString("F2")</td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="5" class="text-center">No available items found for splitting.</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Split Bill Summary</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label asp-for="Notes" class="form-label"></label>
                                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                            <span asp-validation-for="Notes" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="row mb-2">
                                            <div class="col-6 text-end">Subtotal:</div>
                                            <div class="col-6 text-end" id="splitSubtotal">₹0.00</div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-6 text-end">Tax:</div>
                                            <div class="col-6 text-end" id="splitTax">₹0.00</div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-6 text-end"><strong>Total:</strong></div>
                                            <div class="col-6 text-end"><strong id="splitTotal">₹0.00</strong></div>
                                        </div>
                                        
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-primary btn-lg" id="createSplitBillButton" disabled>
                                                <i class="fas fa-receipt"></i> Create Split Bill
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Enable/disable quantity inputs based on checkbox status
            $('.item-checkbox').change(function() {
                var row = $(this).closest('tr');
                var quantityInput = row.find('.item-quantity');
                
                if ($(this).is(':checked')) {
                    quantityInput.prop('disabled', false);
                } else {
                    quantityInput.prop('disabled', true);
                }
                
                updateSplitBillTotals();
            });
            
            // Update totals when quantity changes
            $('.item-quantity').change(function() {
                updateSplitBillTotals();
            });
            
            // Initial calculation
            updateSplitBillTotals();
            
            function updateSplitBillTotals() {
                var subtotal = 0;
                var taxRate = @(Model.TaxAmount / Model.Subtotal);
                var hasSelectedItems = false;
                
                $('.item-row').each(function() {
                    var checkbox = $(this).find('.item-checkbox');
                    
                    if (checkbox.is(':checked')) {
                        hasSelectedItems = true;
                        var unitPrice = parseFloat($(this).data('unit-price'));
                        var quantity = parseInt($(this).find('.item-quantity').val()) || 0;
                        
                        subtotal += unitPrice * quantity;
                    }
                });
                
                var tax = subtotal * taxRate;
                var total = subtotal + tax;
                
                $('#splitSubtotal').text('₹' + subtotal.toFixed(2));
                $('#splitTax').text('₹' + tax.toFixed(2));
                $('#splitTotal').text('₹' + total.toFixed(2));
                
                // Enable/disable submit button
                if (hasSelectedItems) {
                    $('#createSplitBillButton').prop('disabled', false);
                } else {
                    $('#createSplitBillButton').prop('disabled', true);
                }
            }
        });
    </script>
}
