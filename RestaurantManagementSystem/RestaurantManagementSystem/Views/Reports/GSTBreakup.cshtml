@model RestaurantManagementSystem.Models.GSTBreakupReportViewModel
@{
    ViewData["Title"] = "GST Breakup Report";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
        <h5 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>GST Breakup Report</h5>
    </div>
    <div class="card-body">
        <form asp-action="GSTBreakup" method="post" class="row g-3 mb-3">
            <div class="col-md-3">
                <label asp-for="Filter.StartDate" class="form-label"></label>
                <input asp-for="Filter.StartDate" class="form-control" type="date" />
            </div>
            <div class="col-md-3">
                <label asp-for="Filter.EndDate" class="form-label"></label>
                <input asp-for="Filter.EndDate" class="form-control" type="date" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-success me-2"><i class="fas fa-sync-alt me-1"></i>Refresh</button>
                <button type="button" id="exportCsvBtn" class="btn btn-outline-secondary me-2"><i class="fas fa-file-csv me-1"></i>CSV</button>
                <button type="button" id="printBtn" class="btn btn-outline-primary"><i class="fas fa-print me-1"></i>Print</button>
            </div>
        </form>

        <div class="row mb-4">
            <div class="col-md-2">
                <div class="stat-tile p-3 bg-light rounded border">
                    <div class="text-muted small">Invoices</div>
                    <div class="h5 mb-0">@Model.Summary.InvoiceCount</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="stat-tile p-3 bg-light rounded border">
                    <div class="text-muted small">Taxable Value</div>
                    <div class="h6 mb-0">₹@Model.Summary.TotalTaxableValue.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="stat-tile p-3 bg-light rounded border">
                    <div class="text-muted small">Discount</div>
                    <div class="h6 mb-0 text-danger">₹@Model.Summary.TotalDiscount.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="stat-tile p-3 bg-light rounded border">
                    <div class="text-muted small">CGST</div>
                    <div class="h6 mb-0">₹@Model.Summary.TotalCGST.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="stat-tile p-3 bg-light rounded border">
                    <div class="text-muted small">SGST</div>
                    <div class="h6 mb-0">₹@Model.Summary.TotalSGST.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="stat-tile p-3 bg-light rounded border">
                    <div class="text-muted small">Invoice Total</div>
                    <div class="h6 mb-0">₹@Model.Summary.NetAmount.ToString("N2")</div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="gstBreakupTable">
                <thead class="table-light">
                    <tr>
                        <th>Date/Time</th>
                        <th>Order #</th>
                        <th class="text-end">Taxable Value</th>
                        <th class="text-end">Discount</th>
                        <th class="text-end">CGST %</th>
                        <th class="text-end">CGST Amt</th>
                        <th class="text-end">SGST %</th>
                        <th class="text-end">SGST Amt</th>
                        <th class="text-end">Total GST</th>
                        <th class="text-end">Invoice Total</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model.Rows.Any())
                {
                    <tr><td colspan="10" class="text-center text-muted">No payments in range.</td></tr>
                }
                else
                {
                    foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@row.PaymentDateFormatted</td>
                            <td>@row.OrderNumber</td>
                            <td class="text-end">₹@row.TaxableValue.ToString("N2")</td>
                            <td class="text-end text-danger">-₹@row.DiscountAmount.ToString("N2")</td>
                            <td class="text-end">@row.CGSTPercentage.ToString("N2")%</td>
                            <td class="text-end">₹@row.CGSTAmount.ToString("N2")</td>
                            <td class="text-end">@row.SGSTPercentage.ToString("N2")%</td>
                            <td class="text-end">₹@row.SGSTAmount.ToString("N2")</td>
                            <td class="text-end fw-semibold">₹@( (row.CGSTAmount + row.SGSTAmount).ToString("N2") )</td>
                            <td class="text-end fw-semibold">₹@row.InvoiceTotal.ToString("N2")</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('exportCsvBtn').addEventListener('click', function () {
            const rows = Array.from(document.querySelectorAll('#gstBreakupTable tr'));
            const csv = rows.map(r => Array.from(r.children).map(c => '"' + c.innerText.replace(/"/g,'""') + '"').join(',')).join('\n');
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'gst_breakup_report.csv';
            a.click();
            URL.revokeObjectURL(url);
        });

        document.getElementById('printBtn').addEventListener('click', function() {
            const printContent = document.querySelector('.card').outerHTML;
            const win = window.open('', '_blank');
            win.document.write('<html><head><title>GST Breakup Report</title><link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" /></head><body>');
            win.document.write(printContent);
            win.document.write('</body></html>');
            win.print();
            win.close();
        });
    </script>
}
