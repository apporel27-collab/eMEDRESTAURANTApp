@{
    ViewData["Title"] = "Customer Reports";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users me-2"></i>Customer Reports</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Reports</li>
                        <li class="breadcrumb-item active">Customers</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user-chart me-2"></i>Customer Analytics</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="fas fa-users fa-4x text-muted mb-3"></i>
                        <h4>Customer Reports Coming Soon</h4>
                        <p class="text-muted">Customer behavior and analytics will be available here.</p>
                        <div class="mt-4">
                            <h6>Planned Features:</h6>
                            <ul class="list-unstyled mt-3">
                                <li><i class="fas fa-check text-success me-2"></i>Customer Visit Frequency</li>
                                <li><i class="fas fa-check text-success me-2"></i>Customer Lifetime Value</li>
                                <li><i class="fas fa-check text-success me-2"></i>Loyalty Program Analytics</li>
                                <li><i class="fas fa-check text-success me-2"></i>Customer Preferences</li>
                                <li><i class="fas fa-check text-success me-2"></i>Demographic Analysis</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>