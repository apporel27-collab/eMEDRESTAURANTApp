@{
    ViewData["Title"] = "Financial Summary";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-calculator me-2"></i>Financial Summary</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Reports</li>
                        <li class="breadcrumb-item active">Financial</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-area me-2"></i>Financial Analytics</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="fas fa-calculator fa-4x text-muted mb-3"></i>
                        <h4>Financial Summary Coming Soon</h4>
                        <p class="text-muted">Comprehensive financial reporting and analysis will be available here.</p>
                        <div class="mt-4">
                            <h6>Planned Features:</h6>
                            <ul class="list-unstyled mt-3">
                                <li><i class="fas fa-check text-success me-2"></i>Profit & Loss Statements</li>
                                <li><i class="fas fa-check text-success me-2"></i>Revenue vs Costs Analysis</li>
                                <li><i class="fas fa-check text-success me-2"></i>Tax Reporting</li>
                                <li><i class="fas fa-check text-success me-2"></i>Cash Flow Analysis</li>
                                <li><i class="fas fa-check text-success me-2"></i>Budget vs Actual Comparison</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>