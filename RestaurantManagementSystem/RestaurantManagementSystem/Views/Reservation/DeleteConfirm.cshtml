@model RestaurantManagementSystem.Models.Reservation
@{
    ViewData["Title"] = "Confirm Reservation Deletion";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h2>Confirm Deletion</h2>
        </div>
    </div>
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this reservation?</h4>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5>Reservation Details</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Guest Name:</strong> @Model.GuestName</p>
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                    <p><strong>Party Size:</strong> @Model.PartySize</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Reservation Date:</strong> @Model.ReservationDate.ToString("MMM dd, yyyy")</p>
                    <p><strong>Reservation Time:</strong> @Model.ReservationTime.ToString("h:mm tt")</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.SpecialRequests))
            {
                <div class="row">
                    <div class="col-12">
                        <p><strong>Special Requests:</strong> @Model.SpecialRequests</p>
                    </div>
                </div>
            }
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <a asp-action="List" asp-route-date="@Model.ReservationDate.ToString("yyyy-MM-dd")" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete Reservation</button>
            </form>
        </div>
    </div>
</div>
