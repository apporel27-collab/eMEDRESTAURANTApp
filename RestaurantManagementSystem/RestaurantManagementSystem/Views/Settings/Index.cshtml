@model RestaurantManagementSystem.ViewModels.RestaurantSettingsViewModel
@{
    ViewData["Title"] = "Restaurant Settings";
}

<link rel="stylesheet" href="~/css/settings.css" />
<link rel="stylesheet" href="~/css/settings-compact.css" />

<div class="container-fluid px-4 settings-container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-0">Restaurant Settings</h1>
            <small class="text-muted">Configuration and parameters for your restaurant</small>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/Home/Index">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Settings</li>
            </ol>
        </nav>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card settings-card mb-4 shadow-sm">
        <div class="card-body py-3 px-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="d-flex align-items-center gap-2">
                    <i class="fas fa-store fa-lg text-primary"></i>
                    <div>
                        <div class="fw-semibold">Restaurant Configuration</div>
                        <small class="text-muted">Manage basic details, taxes and printing</small>
                    </div>
                </div>
                <div>
                    <a asp-action="Edit" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-edit me-1"></i> Edit
                    </a>
                </div>
            </div>
            <div class="p-0">
            <div class="row">
                <div class="col-md-8">
                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="card mb-0 compact-card">
                                    <div class="card-body py-2 px-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <div class="fw-semibold">Restaurant Details</div>
                                                <small class="text-muted">Name, address and contact</small>
                                            </div>
                                            <i class="fas fa-building text-secondary"></i>
                                        </div>
                                        <hr class="my-2" />
                                        <div class="small">
                                            <div class="fw-bold">@Model.RestaurantName</div>
                                            <div class="text-muted">@Model.StreetAddress</div>
                                            <div class="text-muted">@Model.City, @Model.State - @Model.Pincode</div>
                                            <div class="text-muted">@Model.Country</div>
                                            <div class="mt-2">
                                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                                {
                                                    <div><i class="fas fa-phone me-1 text-primary"></i> @Model.PhoneNumber</div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Email))
                                                {
                                                    <div><i class="fas fa-envelope me-1 text-primary"></i> @Model.Email</div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Website))
                                                {
                                                    <div><i class="fas fa-globe me-1 text-primary"></i> <a href="@Model.Website" target="_blank">@Model.Website</a></div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.FssaiNo))
                                                {
                                                    <div class="mt-1"><span class="badge bg-light text-dark">FSSAI: @Model.FssaiNo</span></div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-0 compact-card">
                                    <div class="card-body py-2 px-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <div class="fw-semibold">Tax Information</div>
                                                <small class="text-muted">GST and currency</small>
                                            </div>
                                            <i class="fas fa-receipt text-secondary"></i>
                                        </div>
                                        <hr class="my-2" />
                                        <div class="small">
                                            <div><span class="text-muted">GST Code</span> <span class="font-monospace ms-2">@Model.GSTCode</span></div>
                                            <div class="mt-1"><span class="text-muted">Currency</span> <span class="fw-semibold ms-2">@Model.CurrencySymbol</span></div>
                                            <div class="mt-1"><span class="text-muted">Default GST</span> <span class="fw-semibold ms-2">@Model.DefaultGSTPercentage%</span></div>
                                            <div class="mt-1"><span class="text-muted">Take Away GST</span> <span class="fw-semibold ms-2">@Model.TakeAwayGSTPercentage%</span></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                        <div class="card mb-3 compact-card">
                            <div class="card-body py-2 px-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-semibold">Parameters</div>
                                        <small class="text-muted">Operational flags</small>
                                    </div>
                                    <i class="fas fa-cogs text-secondary"></i>
                                </div>
                                <hr class="my-2" />
                                <div class="row small">
                                    <div class="col-6 mb-1">Default GST</div>
                                    <div class="col-6 text-end"><span class="badge @(Model.IsDefaultGSTRequired ? "bg-success" : "bg-danger")">@(Model.IsDefaultGSTRequired ? "Yes" : "No")</span></div>

                                    <div class="col-6 mb-1">Take Away GST</div>
                                    <div class="col-6 text-end"><span class="badge @(Model.IsTakeAwayGSTRequired ? "bg-success" : "bg-danger")">@(Model.IsTakeAwayGSTRequired ? "Yes" : "No")</span></div>

                                    <div class="col-6 mb-1">Takeaway Included GST</div>
                                    <div class="col-6 text-end"><span class="badge @(Model.IsTakeawayIncludedGSTReq ? "bg-success" : "bg-danger")">@(Model.IsTakeawayIncludedGSTReq ? "Yes" : "No")</span></div>

                                    <div class="col-6 mb-1">Bill Format</div>
                                    <div class="col-6 text-end"><span class="badge bg-primary">@Model.BillFormat</span></div>

                                    <div class="col-6 mb-1">Discount Approval</div>
                                    <div class="col-6 text-end"><span class="badge @(Model.IsDiscountApprovalRequired ? "bg-success" : "bg-danger")">@(Model.IsDiscountApprovalRequired ? "Yes" : "No")</span></div>

                                    <div class="col-6 mb-1">Card Payment Approval</div>
                                    <div class="col-6 text-end"><span class="badge @(Model.IsCardPaymentApprovalRequired ? "bg-success" : "bg-danger")">@(Model.IsCardPaymentApprovalRequired ? "Yes" : "No")</span></div>
                                </div>
                            </div>
                        </div>
                    
                        <div class="card mb-0 compact-card">
                            <div class="card-body py-2 px-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-semibold">System Info</div>
                                        <small class="text-muted">Timestamps</small>
                                    </div>
                                    <i class="fas fa-info-circle text-secondary"></i>
                                </div>
                                <hr class="my-2" />
                                <div class="small text-muted">
                                    <div>Created: @Model.CreatedAt</div>
                                    <div>Updated: @Model.UpdatedAt</div>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="col-md-4">
                    <div class="settings-card h-100">
                        <div class="card">
                            <div class="card-body text-center py-3">
                                <div class="fw-semibold mb-2">Restaurant Logo</div>
                                <div class="logo-container d-flex align-items-center justify-content-center">
                                    @if (!string.IsNullOrEmpty(Model.LogoPath))
                                    {
                                        <img src="@Model.LogoPath" alt="Restaurant Logo" class="logo-image rounded" />
                                    }
                                    else
                                    {
                                        <div class="logo-placeholder">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                            <p class="mt-2 text-muted mb-0">No logo uploaded</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}