@model RestaurantManagementSystem.Models.User
@{
    ViewData["Title"] = Model.Id == 0 ? "Create User" : ((ViewBag.IsView ?? false) ? "View User" : "Edit User");
    bool isView = ViewBag.IsView ?? false;
}

<div class="container py-5" style="background: linear-gradient(135deg, #f8fafc 60%, #e3e6f3 100%); min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-white d-flex align-items-center" style="background: linear-gradient(90deg, #4f8cff 60%, #6a82fb 100%); border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                    <span class="me-2"><i class="bi bi-person-circle" style="font-size:2rem;"></i></span>
                    <h4 class="mb-0 flex-grow-1">@ViewData["Title"]</h4>
                </div>
                <div class="card-body px-4 py-4" style="background: #fff; border-bottom-left-radius: 1rem; border-bottom-right-radius: 1rem;">
                    @if (TempData["ResultMessage"] != null)
                    {
                        <div class="alert alert-info">@TempData["ResultMessage"]</div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                                <div class="alert alert-danger">
                                    <strong>Please correct the errors below.</strong>
                                    <ul class="mb-0">
                                    @foreach (var entry in ViewData.ModelState)
                                    {
                                        foreach (var error in entry.Value.Errors)
                                        {
                                            <li><b>@entry.Key</b>: @error.ErrorMessage</li>
                                        }
                                    }
                                    </ul>
                                </div>
                            }
                            <form asp-action="SaveUser" method="post" autocomplete="off">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="mb-2 text-secondary fw-bold" style="font-size:1.1rem;">Account Info</div>
                                        <label asp-for="Username" class="form-label">Username</label>
                                        @if (isView)
                                        {
                                            <input asp-for="Username" class="form-control" disabled />
                                            <input type="hidden" name="Username" value="@Model.Username" />
                                        }
                                        else
                                        {
                                            <input asp-for="Username" class="form-control" required maxlength="50" />
                                        }
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-2 text-secondary fw-bold" style="font-size:1.1rem;">Contact & Roles</div>
                                        <label asp-for="Email" class="form-label">Email</label>
                                        @if (isView)
                                        {
                                            <input asp-for="Email" class="form-control" type="email" disabled />
                                            <input type="hidden" name="Email" value="@Model.Email" />
                                        }
                                        else
                                        {
                                            <input asp-for="Email" class="form-control" type="email" maxlength="100" />
                                        }
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <hr class="my-3" />
                                        <label asp-for="FirstName" class="form-label">First Name</label>
                                        @if (isView)
                                        {
                                            <input asp-for="FirstName" class="form-control" disabled />
                                            <input type="hidden" name="FirstName" value="@Model.FirstName" />
                                        }
                                        else
                                        {
                                            <input asp-for="FirstName" class="form-control" required maxlength="50" />
                                        }
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <hr class="my-3" />
                                        <label asp-for="LastName" class="form-label">Last Name</label>
                                        @if (isView)
                                        {
                                            <input asp-for="LastName" class="form-control" disabled />
                                            <input type="hidden" name="LastName" value="@Model.LastName" />
                                        }
                                        else
                                        {
                                            <input asp-for="LastName" class="form-control" maxlength="50" />
                                        }
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Phone" class="form-label">Phone</label>
                                        @if (isView)
                                        {
                                            <input asp-for="Phone" class="form-control" disabled />
                                            <input type="hidden" name="Phone" value="@Model.Phone" />
                                        }
                                        else
                                        {
                                            <input asp-for="Phone" class="form-control" maxlength="20" />
                                        }
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="SelectedRoleIds" class="form-label">Roles</label>
                                        @if (isView)
                                        {
                                            <select class="form-select" multiple disabled>
                                                @foreach (var role in ViewBag.AllRoles)
                                                {
                                                    <option value="@role.Id" selected="@(Model.SelectedRoleIds?.Contains(role.Id) ?? false)">@role.Name</option>
                                                }
                                            </select>
                                            @if (Model.SelectedRoleIds != null)
                                            {
                                                foreach (var roleId in Model.SelectedRoleIds)
                                                {
                                                    <input type="hidden" name="selectedRoles" value="@roleId" />
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <select name="selectedRoles" class="form-select" multiple>
                                                @foreach (var role in ViewBag.AllRoles)
                                                {
                                                    <option value="@role.Id" selected="@(Model.SelectedRoleIds?.Contains(role.Id) ?? false)">@role.Name</option>
                                                }
                                            </select>
                                        }
                                        <span asp-validation-for="SelectedRoleIds" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="password" class="form-label">@(Model.Id == 0 ? "Password" : "Password")</label>
                                        @if (Model.Id == 0)
                                        {
                                            <input asp-for="Password" id="password" name="password" class="form-control" maxlength="100" required />
                                        }
                                        else
                                        {
                                            <div class="input-group">
                                                <input asp-for="Password" id="password" name="password" class="form-control" maxlength="100" type="password" disabled />
                                                <button type="button" class="btn btn-outline-secondary" id="enablePasswordBtn">Edit</button>
                                            </div>
                                            <small class="form-text text-muted">Leave blank to keep current password.</small>
                                        }
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                        @if (isView)
                                        {
                                            <input asp-for="ConfirmPassword" class="form-control" disabled />
                                        }
                                        else
                                        {
                                            <input asp-for="ConfirmPassword" class="form-control" maxlength="100" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check mt-4">
                                            @if (isView)
                                            {
                                                <input asp-for="IsActive" class="form-check-input" disabled />
                                                <input type="hidden" name="IsActive" value="@(Model.IsActive ? "true" : "false")" />
                                            }
                                            else
                                            {
                                                <input asp-for="IsActive" class="form-check-input" />
                                            }
                                            <label asp-for="IsActive" class="form-check-label ms-2">Active</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-4">
                                    <a asp-action="UserList" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">Back to List</a>
                                    @if (!isView)
                                    {
                                        <button type="submit" class="btn btn-gradient rounded-pill px-5 py-2 fw-bold shadow-sm" style="background: linear-gradient(90deg, #4f8cff 60%, #6a82fb 100%); color: #fff; border: none;">Save</button>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .btn-gradient {
            background: linear-gradient(90deg, #4f8cff 60%, #6a82fb 100%);
            color: #fff;
            border: none;
        }
        .btn-gradient:hover {
            background: linear-gradient(90deg, #6a82fb 60%, #4f8cff 100%);
            color: #fff;
        }
        .card {
            border-radius: 1rem;
        }
        .form-label {
            font-weight: 500;
        }
        .form-control:focus {
            box-shadow: 0 0 0 0.15rem #4f8cff33;
            border-color: #4f8cff;
        }
        .form-select:focus {
            box-shadow: 0 0 0 0.15rem #4f8cff33;
            border-color: #4f8cff;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var enableBtn = document.getElementById('enablePasswordBtn');
            var passwordInput = document.getElementById('password');
            if (enableBtn && passwordInput) {
                enableBtn.addEventListener('click', function() {
                    passwordInput.disabled = false;
                    passwordInput.focus();
                });
            }
        });
    </script>
}
