@model List<RestaurantManagementSystem.Models.KitchenStation>

@{
    ViewData["Title"] = "Kitchen Stations";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Kitchen Stations</h1>
        <div>
            <a href="@Url.Action("Dashboard", "Kitchen")" class="btn btn-outline-primary me-2">
                <i class="fas fa-th-large"></i> Dashboard
            </a>
            <a href="@Url.Action("StationForm", "Kitchen")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Station
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Station List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0" id="stationsTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var station in Model)
                            {
                                <tr>
                                    <td>@station.Name</td>
                                    <td>@station.Description</td>
                                    <td>
                                        <span class="badge @(station.IsActive ? "bg-success" : "bg-danger")">
                                            @(station.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>@station.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>@station.UpdatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>
                                        <a href="@Url.Action("StationForm", "Kitchen", new { id = station.Id })" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="post" action="@Url.Action("DeleteStation", "Kitchen", new { id = station.Id })" class="d-inline ms-1">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this kitchen station?');">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No kitchen stations found. Please add a new station.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#stationsTable').DataTable({
                "order": [[0, "asc"]],
                "pageLength": 10,
                "columnDefs": [
                    { "orderable": false, "targets": 5 }
                ]
            });
        });
    </script>
}
