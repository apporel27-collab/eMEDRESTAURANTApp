@model PaymentViewModel
@{
    ViewData["Title"] = "Payment Management";
}

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"] - Order #@Model.OrderNumber</h1>
        <div>
            <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Order
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Order Summary</h5>
                    @if (Model.OrderStatus < 3) @* Not Completed *@
                    {
                        <span class="badge bg-primary">@Model.OrderStatusDisplay</span>
                    }
                    else if (Model.OrderStatus == 3) @* Completed *@
                    {
                        <span class="badge bg-success">@Model.OrderStatusDisplay</span>
                    }
                    else @* Cancelled *@
                    {
                        <span class="badge bg-danger">@Model.OrderStatusDisplay</span>
                    }
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Table:</strong> @Model.TableName</p>
                            <p><strong>Status:</strong> @Model.OrderStatusDisplay</p>
                        </div>
                        <div class="col-md-6">
                            <div class="row mb-2">
                                <div class="col-6 text-end">Subtotal:</div>
                                <div class="col-6 text-end">$@Model.Subtotal.ToString("F2")</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6 text-end">Tax:</div>
                                <div class="col-6 text-end">$@Model.TaxAmount.ToString("F2")</div>
                            </div>
                            @if (Model.DiscountAmount > 0)
                            {
                                <div class="row mb-2">
                                    <div class="col-6 text-end">Discount:</div>
                                    <div class="col-6 text-end text-danger">-$@Model.DiscountAmount.ToString("F2")</div>
                                </div>
                            }
                            @if (Model.TipAmount > 0)
                            {
                                <div class="row mb-2">
                                    <div class="col-6 text-end">Tip:</div>
                                    <div class="col-6 text-end">$@Model.TipAmount.ToString("F2")</div>
                                </div>
                            }
                            <div class="row mb-2">
                                <div class="col-6 text-end"><strong>Total:</strong></div>
                                <div class="col-6 text-end"><strong>$@Model.TotalAmount.ToString("F2")</strong></div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6 text-end">Paid:</div>
                                <div class="col-6 text-end text-success">$@Model.PaidAmount.ToString("F2")</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6 text-end"><strong>Remaining:</strong></div>
                                <div class="col-6 text-end @(Model.RemainingAmount <= 0 ? "text-success" : "text-danger")">
                                    <strong>$@Model.RemainingAmount.ToString("F2")</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        @if (Model.OrderStatus != 4) @* Not Cancelled *@
                        {
                            <div class="btn-group">
                                @if (Model.RemainingAmount > 0)
                                {
                                    <a asp-action="ProcessPayment" asp-route-orderId="@Model.OrderId" class="btn btn-primary">
                                        <i class="fas fa-money-bill-wave"></i> Process Payment
                                    </a>
                                }
                                
                                <a asp-action="SplitBill" asp-route-orderId="@Model.OrderId" class="btn btn-outline-primary">
                                    <i class="fas fa-receipt"></i> Split Bill
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @if (Model.Payments.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Payment History</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date/Time</th>
                                        <th>Method</th>
                                        <th>Amount</th>
                                        <th>Tip</th>
                                        <th>Status</th>
                                        <th>Processed By</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.Payments)
                                    {
                                        <tr>
                                            <td>@payment.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                            <td>
                                                @payment.PaymentMethodDisplay
                                                @if (!string.IsNullOrEmpty(payment.LastFourDigits))
                                                {
                                                    <div class="small text-muted">
                                                        @payment.CardType •••• @payment.LastFourDigits
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(payment.ReferenceNumber))
                                                {
                                                    <div class="small text-muted">Ref: @payment.ReferenceNumber</div>
                                                }
                                            </td>
                                            <td>$@payment.Amount.ToString("F2")</td>
                                            <td>$@payment.TipAmount.ToString("F2")</td>
                                            <td>
                                                @{
                                                    var badgeClass = payment.Status switch
                                                    {
                                                        0 => "bg-warning text-dark",
                                                        1 => "bg-success",
                                                        2 => "bg-danger",
                                                        3 => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@payment.StatusDisplay</span>
                                            </td>
                                            <td>@payment.ProcessedByName</td>
                                            <td>
                                                @if (payment.Status == 1) @* Approved *@
                                                {
                                                    <a asp-action="VoidPayment" asp-route-id="@payment.Id" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-ban"></i> Void
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.SplitBills.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Split Bills</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date/Time</th>
                                        <th>Amount</th>
                                        <th>Tax</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Created By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var splitBill in Model.SplitBills)
                                    {
                                        <tr>
                                            <td>@splitBill.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                            <td>$@splitBill.Amount.ToString("F2")</td>
                                            <td>$@splitBill.TaxAmount.ToString("F2")</td>
                                            <td>$@(splitBill.Amount + splitBill.TaxAmount).ToString("F2")</td>
                                            <td>
                                                @{
                                                    var badgeClass = splitBill.Status switch
                                                    {
                                                        0 => "bg-primary",
                                                        1 => "bg-success",
                                                        2 => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@splitBill.StatusDisplay</span>
                                            </td>
                                            <td>@splitBill.CreatedByName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Items</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.MenuItemName</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.UnitPrice.ToString("F2")</td>
                                        <td>$@item.Subtotal.ToString("F2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
