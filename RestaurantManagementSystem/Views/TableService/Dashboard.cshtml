@model TableServiceDashboardViewModel
@{
    ViewData["Title"] = "Table Service Dashboard";
}

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="SeatGuest" class="btn btn-primary">
                <i class="fas fa-chair"></i> Seat New Guest
            </a>
            <a asp-action="ActiveTables" class="btn btn-outline-primary ms-2">
                <i class="fas fa-list"></i> View All Active Tables
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Available Tables</h5>
                    <h2 class="display-4">@Model.AvailableTables</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Occupied Tables</h5>
                    <h2 class="display-4">@Model.OccupiedTables</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Dirty Tables</h5>
                    <h2 class="display-4">@Model.DirtyTables</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Waitlist / Reservations Today</h5>
                    <h2 class="display-4">@Model.WaitlistCount / @Model.ReservationCount</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Active Tables</h5>
                </div>
                <div class="card-body">
                    @if (Model.CurrentTurnovers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Table</th>
                                        <th>Guest</th>
                                        <th>Party Size</th>
                                        <th>Server</th>
                                        <th>Status</th>
                                        <th>Duration</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var table in Model.CurrentTurnovers)
                                    {
                                        <tr>
                                            <td>@table.TableName</td>
                                            <td>@table.GuestName</td>
                                            <td>@table.PartySize</td>
                                            <td>@table.ServerName</td>
                                            <td>@table.StatusText</td>
                                            <td class="@table.TimerClass">@table.DurationDisplay</td>
                                            <td>
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Update Status
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        @if (table.Status < 1)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="1" />
                                                                    <button type="submit" class="dropdown-item">Start Service</button>
                                                                </form>
                                                            </li>
                                                        }
                                                        @if (table.Status < 2)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="2" />
                                                                    <button type="submit" class="dropdown-item">Check Requested</button>
                                                                </form>
                                                            </li>
                                                        }
                                                        @if (table.Status < 3)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="3" />
                                                                    <button type="submit" class="dropdown-item">Mark as Paid</button>
                                                                </form>
                                                            </li>
                                                        }
                                                        @if (table.Status < 4)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="4" />
                                                                    <button type="submit" class="dropdown-item">Mark as Completed</button>
                                                                </form>
                                                            </li>
                                                        }
                                                        @if (table.Status < 5)
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateTableStatus" method="post">
                                                                    <input type="hidden" name="turnoverId" value="@table.TurnoverId" />
                                                                    <input type="hidden" name="newStatus" value="5" />
                                                                    <button type="submit" class="dropdown-item">Mark as Departed</button>
                                                                </form>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a asp-action="ActiveTables" class="btn btn-outline-primary">View All Active Tables</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No active tables at the moment.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Unoccupied Tables Section -->
        <div class="col-lg-12 mt-4">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Unoccupied Tables</h5>
                    <small class="text-muted">Create an order for available tables</small>
                </div>
                <div class="card-body">
                    @if (Model.UnoccupiedTables.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Table Name</th>
                                        <th>Capacity</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var table in Model.UnoccupiedTables)
                                    {
                                        <tr>
                                            <td>@table.TableName</td>
                                            <td>@table.Capacity persons</td>
                                            <td><span class="badge bg-success">Available</span></td>
                                            <td>
                                                <a href="@Url.Action("Create", "Order", new { tableId = table.Id })" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-plus-circle"></i> Create Order
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No unoccupied tables available at the moment.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-refresh the page every 2 minutes
            setTimeout(function() {
                location.reload();
            }, 120000);
        });
    </script>
}
