@model SeatGuestViewModel
@{
    ViewData["Title"] = "Seat Guest";
}

<div class="container-fluid p-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <a asp-action="Dashboard" class="btn btn-outline-secondary btn-sm">Back to Dashboard</a>
                </div>
                <div class="card-body">
                    <form asp-action="SeatGuest" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        @if (Model.ReservationId.HasValue)
                        {
                            <input type="hidden" asp-for="ReservationId" />
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Seating from reservation.
                            </div>
                        }
                        
                        @if (Model.WaitlistId.HasValue)
                        {
                            <input type="hidden" asp-for="WaitlistId" />
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Seating from waitlist.
                            </div>
                        }
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GuestName" class="form-label"></label>
                                    <input asp-for="GuestName" class="form-control" />
                                    <span asp-validation-for="GuestName" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="PartySize" class="form-label"></label>
                                    <input asp-for="PartySize" class="form-control" type="number" />
                                    <span asp-validation-for="PartySize" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Notes" class="form-label"></label>
                                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TableId" class="form-label"></label>
                                    <select asp-for="TableId" asp-items="Model.AvailableTables" class="form-select">
                                        <option value="">-- Select a Table --</option>
                                    </select>
                                    <span asp-validation-for="TableId" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="ServerId" class="form-label"></label>
                                    <select asp-for="ServerId" asp-items="Model.Servers" class="form-select">
                                        <option value="">-- Select a Server --</option>
                                    </select>
                                    <span asp-validation-for="ServerId" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="TargetTurnTime" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="TargetTurnTime" class="form-control" type="number" />
                                        <span class="input-group-text">minutes</span>
                                    </div>
                                    <span asp-validation-for="TargetTurnTime" class="text-danger"></span>
                                    <small class="form-text text-muted">Standard turn time is 90 minutes.</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Dashboard" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-chair"></i> Seat Guest
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
