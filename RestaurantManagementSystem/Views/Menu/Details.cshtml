@model RestaurantManagementSystem.Models.MenuItem

@{
    ViewData["Title"] = "Menu Item Details";
}

<div class="container-fluid py-2">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="row mb-3">
            <div class="col">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    
    @if (TempData["InfoMessage"] != null)
    {
        <div class="row mb-3">
            <div class="col">
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header py-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Menu Item Details</h5>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a asp-controller="Menu" asp-action="Recipe" asp-route-id="@Model.Id" class="btn btn-sm btn-info" id="recipeBtn">
                                <i class="fa fa-book"></i> Recipe
                            </a>
                            <a asp-controller="Menu" asp-action="Recipe" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary">
                                <i class="fa fa-plus"></i> Add Recipe
                            </a>
                            <a asp-controller="Recipe" asp-action="CalculateSuggestedPrice" asp-route-id="@Model.Id" class="btn btn-sm btn-success">
                                <i class="fa fa-calculator"></i> Price
                            </a>
                            <script>
                                document.getElementById('recipeBtn').addEventListener('click', function(e) {
                                    e.preventDefault();
                                    // First ensure stored procedures are created
                                    fetch('/Recipe/SetupRecipeScripts')
                                        .then(response => {
                                            window.location.href = this.getAttribute('href');
                                        })
                                        .catch(error => {
                                            window.location.href = this.getAttribute('href');
                                        });
                                });
                            </script>
                            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                <i class="fa fa-list"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body py-2">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center mb-3">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded" style="max-height:200px;" />
                                }
                                else
                                {
                                    <div class="bg-light p-3 rounded text-center text-muted">
                                        <i class="fa fa-image fa-3x mb-2"></i>
                                        <p class="small mb-0">No image available</p>
                                    </div>
                                }
                            </div>
                            
                            <h4 class="mb-0">@Model.Name</h4>
                            <p class="text-muted small">@Model.PLUCode</p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <h5 class="mb-0">@Model.Price.ToString("C")</h5>
                                @if (Model.DiscountPercentage > 0)
                                {
                                    <span class="badge badge-danger">
                                        @Model.DiscountPercentage% OFF
                                    </span>
                                }
                            </div>

                            <hr class="my-2" />

                            <div class="row">
                                <div class="col-6">
                                    <label class="small text-muted mb-0">Category</label>
                                    <p class="mb-1">@Model.Category?.Name</p>
                                </div>
                                <div class="col-6">
                                    <label class="small text-muted mb-0">Preparation Time</label>
                                    <p class="mb-1">@Model.PreparationTimeMinutes min</p>
                                </div>
                            </div>

                            <div class="row mb-2">
                                @if (Model.CalorieCount.HasValue)
                                {
                                    <div class="col-6">
                                        <label class="small text-muted mb-0">Calories</label>
                                        <p class="mb-1">@Model.CalorieCount cal</p>
                                    </div>
                                }
                                <div class="@(Model.CalorieCount.HasValue ? "col-6" : "col-12")">
                                    <label class="small text-muted mb-0">Status</label>
                                    <div>
                                        @if (Model.IsAvailable)
                                        {
                                            <span class="badge badge-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Unavailable</span>
                                        }

                                        @if (Model.IsFeatured)
                                        {
                                            <span class="badge badge-info ml-1">Featured</span>
                                        }

                                        @if (Model.IsSpecial)
                                        {
                                            <span class="badge badge-warning ml-1">Special</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="card mb-2 shadow-sm">
                                <div class="card-header py-1">
                                    <h6 class="mb-0">Description</h6>
                                </div>
                                <div class="card-body py-2">
                                    <p class="mb-0 small">@Model.Description</p>
                                </div>
                            </div>

                            @if (Model.Allergens != null && Model.Allergens.Any())
                            {
                                <div class="card mb-2 shadow-sm">
                                    <div class="card-header py-1">
                                        <h6 class="mb-0">Allergens</h6>
                                    </div>
                                    <div class="card-body py-2">
                                        <div class="row g-1">
                                            @foreach (var allergen in Model.Allergens)
                                            {
                                                <div class="col-md-3 col-sm-4 col-6 mb-1">
                                                    <div class="d-flex align-items-center">
                                                        @if (!string.IsNullOrEmpty(allergen.Allergen?.IconPath))
                                                        {
                                                            <img src="@allergen.Allergen.IconPath" alt="@allergen.Allergen.Name" class="img-fluid mr-1" style="max-height: 16px;" />
                                                        }
                                                        else
                                                        {
                                                            <i class="fa fa-exclamation-triangle text-warning mr-1 small"></i>
                                                        }
                                                        <span class="small">@allergen.Allergen?.Name</span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.Ingredients != null && Model.Ingredients.Any())
                            {
                                <div class="card mb-2 shadow-sm">
                                    <div class="card-header py-1">
                                        <h6 class="mb-0">Ingredients</h6>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-sm table-striped table-hover mb-0">
                                                <thead>
                                                    <tr class="small">
                                                        <th class="py-1">Ingredient</th>
                                                        <th class="py-1">Quantity</th>
                                                        <th class="py-1">Optional</th>
                                                        <th class="py-1">Instructions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var ingredient in Model.Ingredients)
                                                    {
                                                        <tr class="small">
                                                            <td class="py-1">@ingredient.Ingredient?.IngredientsName</td>
                                                            <td class="py-1">@ingredient.Quantity @ingredient.Unit</td>
                                                            <td class="py-1">
                                                                @if (ingredient.IsOptional)
                                                                {
                                                                    <span class="badge badge-info badge-sm">Optional</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge badge-secondary badge-sm">Required</span>
                                                                }
                                                            </td>
                                                            <td class="py-1 text-truncate" style="max-width: 150px;" title="@ingredient.Instructions">@ingredient.Instructions</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.Modifiers != null && Model.Modifiers.Any())
                            {
                                <div class="card mb-2 shadow-sm">
                                    <div class="card-header py-1">
                                        <h6 class="mb-0">Modifiers</h6>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-sm table-striped table-hover mb-0">
                                                <thead>
                                                    <tr class="small">
                                                        <th class="py-1">Modifier</th>
                                                        <th class="py-1">Price</th>
                                                        <th class="py-1">Default</th>
                                                        <th class="py-1">Max</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var modifier in Model.Modifiers)
                                                    {
                                                        <tr class="small">
                                                            <td class="py-1">@modifier.Modifier?.Name</td>
                                                            <td class="py-1">@(modifier.PriceAdjustment > 0 ? "+" : "")@modifier.PriceAdjustment.ToString("C")</td>
                                                            <td class="py-1">
                                                                @if (modifier.IsDefault)
                                                                {
                                                                    <span class="badge badge-success badge-sm">Default</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge badge-secondary badge-sm">Optional</span>
                                                                }
                                                            </td>
                                                            <td class="py-1">
                                                                @if (modifier.MaxAllowed.HasValue)
                                                                {
                                                                    <span>@modifier.MaxAllowed</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted">∞</span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
