@model RestaurantManagementSystem.Models.MenuItem

@{
    ViewData["Title"] = "Menu Item Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Menu Item Details</h4>
                    <div class="float-right">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a asp-action="Recipe" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fa fa-book"></i> Recipe
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-list"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center mb-4">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded" style="max-height:300px;" />
                                }
                                else
                                {
                                    <div class="bg-light p-5 rounded text-center text-muted">
                                        <i class="fa fa-image fa-5x mb-3"></i>
                                        <p>No image available</p>
                                    </div>
                                }
                            </div>
                            
                            <h3>@Model.Name</h3>
                            <p class="text-muted">@Model.PLUCode</p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <h4>@Model.Price.ToString("C")</h4>
                                @if (Model.DiscountPercentage > 0)
                                {
                                    <span class="badge badge-danger">
                                        @Model.DiscountPercentage% OFF
                                    </span>
                                }
                            </div>

                            <hr />

                            <div class="mb-3">
                                <h5>Category</h5>
                                <p>@Model.Category?.Name</p>
                            </div>

                            <div class="mb-3">
                                <h5>Preparation Time</h5>
                                <p>@Model.PreparationTimeMinutes minutes</p>
                            </div>

                            @if (Model.CalorieCount.HasValue)
                            {
                                <div class="mb-3">
                                    <h5>Calories</h5>
                                    <p>@Model.CalorieCount calories</p>
                                </div>
                            }

                            <div class="mb-3">
                                <h5>Status</h5>
                                @if (Model.IsAvailable)
                                {
                                    <span class="badge badge-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Unavailable</span>
                                }

                                @if (Model.IsFeatured)
                                {
                                    <span class="badge badge-info ml-2">Featured</span>
                                }

                                @if (Model.IsSpecial)
                                {
                                    <span class="badge badge-warning ml-2">Special</span>
                                }
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5>Description</h5>
                                </div>
                                <div class="card-body">
                                    <p>@Model.Description</p>
                                </div>
                            </div>

                            @if (Model.Allergens != null && Model.Allergens.Any())
                            {
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5>Allergens</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            @foreach (var allergen in Model.Allergens)
                                            {
                                                <div class="col-md-3 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        @if (!string.IsNullOrEmpty(allergen.Allergen?.IconPath))
                                                        {
                                                            <img src="@allergen.Allergen.IconPath" alt="@allergen.Allergen.Name" class="img-fluid mr-2" style="max-height: 20px;" />
                                                        }
                                                        else
                                                        {
                                                            <i class="fa fa-exclamation-triangle text-warning mr-2"></i>
                                                        }
                                                        <span>@allergen.Allergen?.Name</span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.Ingredients != null && Model.Ingredients.Any())
                            {
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5>Ingredients</h5>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Ingredient</th>
                                                    <th>Quantity</th>
                                                    <th>Optional</th>
                                                    <th>Instructions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var ingredient in Model.Ingredients)
                                                {
                                                    <tr>
                                                        <td>@ingredient.Ingredient?.Name</td>
                                                        <td>@ingredient.Quantity @ingredient.Unit</td>
                                                        <td>
                                                            @if (ingredient.IsOptional)
                                                            {
                                                                <span class="badge badge-info">Optional</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge badge-secondary">Required</span>
                                                            }
                                                        </td>
                                                        <td>@ingredient.Instructions</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }

                            @if (Model.Modifiers != null && Model.Modifiers.Any())
                            {
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5>Modifiers</h5>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Modifier</th>
                                                    <th>Price Adjustment</th>
                                                    <th>Default</th>
                                                    <th>Max Allowed</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var modifier in Model.Modifiers)
                                                {
                                                    <tr>
                                                        <td>@modifier.Modifier?.Name</td>
                                                        <td>@(modifier.PriceAdjustment > 0 ? "+" : "")@modifier.PriceAdjustment.ToString("C")</td>
                                                        <td>
                                                            @if (modifier.IsDefault)
                                                            {
                                                                <span class="badge badge-success">Default</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge badge-secondary">Optional</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (modifier.MaxAllowed.HasValue)
                                                            {
                                                                <span>@modifier.MaxAllowed</span>
                                                            }
                                                            else
                                                            {
                                                                <span>Unlimited</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
