@model RestaurantManagementSystem.ViewModels.MenuItemViewModel

@{
    ViewData["Title"] = "Create Menu Item";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Create Menu Item</h4>
                    <div class="float-right">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <ul class="nav nav-tabs" id="menuItemTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">General</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="allergens-tab" data-bs-toggle="tab" data-bs-target="#allergens" type="button" role="tab" aria-controls="allergens" aria-selected="false">Allergens</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="ingredients-tab" data-bs-toggle="tab" data-bs-target="#ingredients" type="button" role="tab" aria-controls="ingredients" aria-selected="false">Ingredients</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="modifiers-tab" data-bs-toggle="tab" data-bs-target="#modifiers" type="button" role="tab" aria-controls="modifiers" aria-selected="false">Modifiers</button>
                            </li>
                        </ul>
                        
                        <div class="tab-content pt-4" id="menuItemTabsContent">
                            <!-- General Tab -->
                            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PLUCode" class="control-label"></label>
                                            <input asp-for="PLUCode" class="form-control" />
                                            <span asp-validation-for="PLUCode" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="Price" class="control-label"></label>
                                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="CategoryId" class="control-label"></label>
                                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                                                <option value="">-- Select Category --</option>
                                            </select>
                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="KitchenStationId" class="control-label"></label>
                                            <select asp-for="KitchenStationId" class="form-control" asp-items="ViewBag.KitchenStations">
                                                <option value="">-- Select Kitchen Station --</option>
                                            </select>
                                            <span asp-validation-for="KitchenStationId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PreparationTimeMinutes" class="control-label"></label>
                                            <input asp-for="PreparationTimeMinutes" class="form-control" type="number" />
                                            <span asp-validation-for="PreparationTimeMinutes" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="CalorieCount" class="control-label"></label>
                                            <input asp-for="CalorieCount" class="form-control" type="number" />
                                            <span asp-validation-for="CalorieCount" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="DiscountPercentage" class="control-label"></label>
                                            <input asp-for="DiscountPercentage" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label asp-for="ImageFile" class="control-label"></label>
                                            <div class="custom-file">
                                                <input asp-for="ImageFile" type="file" class="custom-file-input" id="customFile" accept="image/*" onchange="displayFileName(this)" />
                                                <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>

                                        <div class="form-check form-check-inline mt-3">
                                            <input asp-for="IsAvailable" class="form-check-input" />
                                            <label asp-for="IsAvailable" class="form-check-label"></label>
                                        </div>
                                        
                                        <div class="form-check form-check-inline">
                                            <input asp-for="IsFeatured" class="form-check-input" />
                                            <label asp-for="IsFeatured" class="form-check-label"></label>
                                        </div>
                                        
                                        <div class="form-check form-check-inline">
                                            <input asp-for="IsSpecial" class="form-check-input" />
                                            <label asp-for="IsSpecial" class="form-check-label"></label>
                                        </div>
                                    </div>

                                    <div class="col-md-12 mt-3">
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label"></label>
                                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Allergens Tab -->
                            <div class="tab-pane fade" id="allergens" role="tabpanel" aria-labelledby="allergens-tab">
                                <div class="row">
                                    @if (ViewBag.Allergens != null)
                                    {
                                        @foreach (var allergen in ViewBag.Allergens)
                                        {
                                            <div class="col-md-4 mb-3">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="form-check">
                                                            <input type="checkbox" name="SelectedAllergens" value="@allergen.Id" id="allergen-@allergen.Id" class="form-check-input" />
                                                            <label class="form-check-label" for="allergen-@allergen.Id">
                                                                @allergen.Name
                                                            </label>
                                                            @if (!string.IsNullOrEmpty(allergen.Description))
                                                            {
                                                                <small class="form-text text-muted">@allergen.Description</small>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>

                                <div class="form-group mt-4 mb-3">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fa fa-save"></i> Save Menu Item
                                    </button>
                                    <button type="button" class="btn btn-info" id="goToIngredientsTab">
                                        Next: Ingredients <i class="fa fa-arrow-right"></i>
                                    </button>
                                </div>
                            </div>                            <!-- Ingredients Tab -->
                            <div class="tab-pane fade" id="ingredients" role="tabpanel" aria-labelledby="ingredients-tab">
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <button type="button" id="addIngredientButton" class="btn btn-success">
                                            <i class="fa fa-plus"></i> Add Ingredient
                                        </button>
                                    </div>
                                </div>
                                
                                <div id="ingredientsContainer">
                                    <!-- Ingredients will be added dynamically here -->
                                </div>

                                <div class="form-group mt-4 mb-3">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fa fa-save"></i> Save Menu Item
                                    </button>
                                    <button type="button" class="btn btn-info" id="goToModifiersTab">
                                        Next: Modifiers <i class="fa fa-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Modifiers Tab -->
                            <div class="tab-pane fade" id="modifiers" role="tabpanel" aria-labelledby="modifiers-tab">
                                <div class="row">
                                    @if (ViewBag.Modifiers != null)
                                    {
                                        @foreach (var modifier in ViewBag.Modifiers)
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="form-check mb-2">
                                                            <input type="checkbox" name="SelectedModifiers" value="@modifier.Id" id="modifier-@modifier.Id" class="form-check-input modifier-checkbox" 
                                                                   onchange="togglePriceField(@modifier.Id)" />
                                                            <label class="form-check-label" for="modifier-@modifier.Id">
                                                                @modifier.Name (@modifier.ModifierType)
                                                            </label>
                                                        </div>
                                                        
                                                        @if (!string.IsNullOrEmpty(modifier.Description))
                                                        {
                                                            <small class="form-text text-muted mb-2">@modifier.Description</small>
                                                        }
                                                        
                                                        <div class="form-group price-adjustment-group" id="price-group-@modifier.Id" style="display:none;">
                                                            <label>Price Adjustment</label>
                                                            <div class="input-group">
                                                                <span class="input-group-text">â‚¹</span>
                                                                <input type="number" name="ModifierPrices[@modifier.Id]" class="form-control" value="0.00" step="0.01" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>

                                <div class="form-group mt-4 mb-3">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fa fa-save"></i> Save Menu Item
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4 text-end">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-save"></i> Save Menu Item
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Template for ingredient items -->
<template id="ingredientTemplate">
    <div class="card mb-3 ingredient-card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-11">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Ingredient</label>
                                <select name="Ingredients[{index}].IngredientId" class="form-control" required>
                                    <option value="">-- Select Ingredient --</option>
                                    @if (ViewBag.Ingredients != null)
                                    {
                                        @foreach (var item in ViewBag.Ingredients)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Quantity</label>
                                <input type="number" name="Ingredients[{index}].Quantity" class="form-control" step="0.01" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Unit</label>
                                <input type="text" name="Ingredients[{index}].Unit" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Instructions</label>
                                <input type="text" name="Ingredients[{index}].Instructions" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="Ingredients[{index}].IsOptional" class="form-check-input" id="isOptional{index}" value="true" />
                        <label class="form-check-label" for="isOptional{index}">Optional</label>
                    </div>
                </div>
                <div class="col-md-1 d-flex align-items-center justify-content-center">
                    <button type="button" class="btn btn-danger remove-ingredient">
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</template>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Display filename when selecting an image
        function displayFileName(input) {
            if (input.files && input.files[0]) {
                var fileName = input.files[0].name;
                $(input).next('.custom-file-label').html(fileName);
            }
        }
        
        // Toggle price adjustment field visibility
        function togglePriceField(modifierId) {
            const checkbox = $(`#modifier-${modifierId}`);
            const priceGroup = $(`#price-group-${modifierId}`);
            
            if (checkbox.is(':checked')) {
                priceGroup.slideDown();
            } else {
                priceGroup.slideUp();
            }
        }
        
        $(document).ready(function() {
            let ingredientIndex = 0;
            
            // Ensure tabs are working by manually initializing them
            var triggerTabList = [].slice.call(document.querySelectorAll('#menuItemTabs button'));
            triggerTabList.forEach(function (triggerEl) {
                var tabTrigger = new bootstrap.Tab(triggerEl);
                
                triggerEl.addEventListener('click', function (event) {
                    event.preventDefault();
                    tabTrigger.show();
                });
            });
            
            // Handle hash in URL to activate specific tab
            if (window.location.hash) {
                const hash = window.location.hash;
                const tabId = hash.replace('#', '') + '-tab';
                $('#' + tabId).tab('show');
            }
            
            // Add ingredient
            $("#addIngredientButton").click(function() {
                const template = $("#ingredientTemplate").html();
                const newRow = template.replace(/{index}/g, ingredientIndex);
                $("#ingredientsContainer").append(newRow);
                ingredientIndex++;
            });
            
            // Remove ingredient
            $(document).on("click", ".remove-ingredient", function() {
                $(this).closest(".ingredient-card").remove();
            });
            
            // Add one ingredient by default
            if ($("#ingredientsContainer").children().length === 0) {
                $("#addIngredientButton").click();
            }
            
            // Tab navigation buttons
            $("#goToIngredientsTab").click(function() {
                document.getElementById('ingredients-tab').click();
            });
            
            $("#goToModifiersTab").click(function() {
                document.getElementById('modifiers-tab').click();
            });
        });
    </script>
}
