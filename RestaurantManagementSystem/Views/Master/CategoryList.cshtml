@model IEnumerable<RestaurantManagementSystem.Models.Category>
@{
    ViewData["Title"] = "Category List";
}

<h2 class="mb-4">Category List</h2>
<a class="btn btn-success mb-3" asp-controller="Master" asp-action="CategoryForm">
    <i class="bi bi-plus-circle"></i> Add New
</a>

@if (TempData["ResultMessage"] != null)
{
    <div class="alert alert-info">@TempData["ResultMessage"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>IsActive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Master" asp-action="CategoryForm" asp-route-id="@item.Id" asp-route-isView="true">View</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Master" asp-action="CategoryForm" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>