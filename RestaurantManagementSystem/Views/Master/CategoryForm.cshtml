@model RestaurantManagementSystem.Models.Category
@{
    ViewData["Title"] = Model.Id == 0 ? "Add Category" : (ViewBag.IsView == true ? "View Category" : "Edit Category");
    bool isView = ViewBag.IsView == true;
}

<h2 class="mb-4">@ViewData["Title"]</h2>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label"></label>
        @if (isView)
        {
            <input asp-for="CategoryName" class="form-control" required readonly />
        }
        else
        {
            <input asp-for="CategoryName" class="form-control" required />
        }
    </div>
    <div class="mb-3 form-check">
        @if (isView)
        {
            <input asp-for="IsActive" class="form-check-input" disabled />
        }
        else
        {
            <input asp-for="IsActive" class="form-check-input" />
        }
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    @if (!isView)
    {
        <button type="submit" class="btn btn-primary">Save</button>
    }
    <a href="@Url.Action("CategoryList", "Master")" class="btn btn-secondary">Back</a>
</form>