@model RestaurantManagementSystem.Models.Ingredients
@{
    ViewData["Title"] = Model.Id == 0 ? "Add Ingredient" : (ViewBag.IsView == true ? "View Ingredient" : "Edit Ingredient");
    bool isView = ViewBag.IsView == true;
}

<h2 class="mb-4">@ViewData["Title"]</h2>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="IngredientsName" class="form-label">Ingredients Name <span style="color:red">*</span></label>
        @if (isView)
        {
            <input asp-for="IngredientsName" class="form-control" required readonly />
        }
        else
        {
            <input asp-for="IngredientsName" class="form-control" required />
        }
    </div>
    <div class="mb-3">
        <label asp-for="DisplayName" class="form-label">Display Name</label>
        @if (isView)
        {
            <input asp-for="DisplayName" class="form-control" readonly />
        }
        else
        {
            <input asp-for="DisplayName" class="form-control" />
        }
    </div>
    <div class="mb-3">
        <label asp-for="Code" class="form-label">Code</label>
        @if (isView)
        {
            <input asp-for="Code" class="form-control" readonly />
        }
        else
        {
            <input asp-for="Code" class="form-control" />
        }
    </div>
    @if (!isView)
    {
        <button type="submit" class="btn btn-primary">Save</button>
    }
    <a href="@Url.Action("IngredientsList", "Master")" class="btn btn-secondary">Back</a>
</form>