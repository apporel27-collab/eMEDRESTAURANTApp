@model List<RestaurantManagementSystem.ViewModels.OrderSourceViewModel>
@{
    ViewData["Title"] = "Order Sources";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Order Sources</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "OnlineOrder")">Online Orders Dashboard</a></li>
        <li class="breadcrumb-item active">Order Sources</li>
    </ol>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-globe me-1"></i>
                Order Sources
            </div>
            <div>
                <a href="@Url.Action("EditOrderSource", "OnlineOrder")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Add Order Source
                </a>
            </div>
        </div>
        <div class="card-body">
            <table id="orderSourcesTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var source in Model)
                    {
                        <tr>
                            <td>@source.Name</td>
                            <td>@source.Description</td>
                            <td>
                                @if (source.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("OrderSourceDetails", "OnlineOrder", new { id = source.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("EditOrderSource", "OnlineOrder", new { id = source.Id })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#orderSourcesTable').DataTable({
                order: [[0, 'asc']]
            });
        });
    </script>
}
