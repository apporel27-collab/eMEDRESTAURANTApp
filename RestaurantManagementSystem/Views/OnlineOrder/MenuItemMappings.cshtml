@model RestaurantManagementSystem.ViewModels.MenuItemMappingsViewModel
@{
    ViewData["Title"] = "Menu Item Mappings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Menu Item Mappings</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "OnlineOrder")">Online Orders Dashboard</a></li>
        <li class="breadcrumb-item active">Menu Item Mappings</li>
    </ol>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter me-1"></i>
            Filter Mappings
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("MenuItemMappings", "OnlineOrder")">
                <div class="row">
                    <div class="col-md-6">
                        <label for="OrderSourceId" class="form-label">Order Source</label>
                        <select id="OrderSourceId" name="OrderSourceId" class="form-select">
                            <option value="">All Order Sources</option>
                            @foreach (var source in Model.OrderSources)
                            {
                                <option value="@source.Id" selected="@(Model.OrderSourceId == source.Id)">@source.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                        <a href="@Url.Action("MenuItemMappings", "OnlineOrder")" class="btn btn-secondary me-2">Clear Filters</a>
                        <a href="@Url.Action("EditMenuItemMapping", "OnlineOrder")" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i> Add Mapping
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Menu Item Mappings
        </div>
        <div class="card-body">
            <table id="mappingsTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Menu Item</th>
                        <th>Order Source</th>
                        <th>External Item ID</th>
                        <th>External Item Name</th>
                        <th>External Price</th>
                        <th>Status</th>
                        <th>Last Synced</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mapping in Model.Mappings)
                    {
                        <tr>
                            <td>@mapping.MenuItemName</td>
                            <td>@mapping.OrderSourceName</td>
                            <td>@mapping.ExternalItemId</td>
                            <td>@mapping.ExternalItemName</td>
                            <td>@(mapping.ExternalPrice.HasValue ? $"${mapping.ExternalPrice.Value:F2}" : "-")</td>
                            <td>
                                @if (mapping.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>@(mapping.LastSyncedAt.HasValue ? mapping.LastSyncedAt.Value.ToString("MM/dd/yyyy HH:mm") : "Never")</td>
                            <td>
                                <a href="@Url.Action("EditMenuItemMapping", "OnlineOrder", new { id = mapping.Id })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#mappingsTable').DataTable({
                order: [[0, 'asc'], [1, 'asc']],
                pageLength: 25
            });
        });
    </script>
}
