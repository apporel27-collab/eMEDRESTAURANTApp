@model OrderDashboardViewModel
@{
    ViewData["Title"] = "Order Dashboard";
}

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> New Order
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Open Orders</h5>
                    <h2 class="display-4">@Model.OpenOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">In Progress</h5>
                    <h2 class="display-4">@Model.InProgressOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Ready</h5>
                    <h2 class="display-4">@Model.ReadyOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Today's Sales</h5>
                    <h2 class="display-4">$@Model.TotalSales.ToString("F2")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Active Orders</h5>
                </div>
                <div class="card-body">
                    @if (Model.ActiveOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="activeOrders">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Type</th>
                                        <th>Table/Customer</th>
                                        <th>Server</th>
                                        <th>Status</th>
                                        <th>Time</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.ActiveOrders)
                                    {
                                        <tr>
                                            <td>@order.OrderNumber</td>
                                            <td>@order.OrderTypeDisplay</td>
                                            <td>
                                                @if (order.OrderType == 0) // Dine-In
                                                {
                                                    @(order.TableName ?? "No Table")
                                                }
                                                else
                                                {
                                                    @(order.GuestName ?? "No Name")
                                                }
                                            </td>
                                            <td>@(order.ServerName ?? "Unassigned")</td>
                                            <td>
                                                @{
                                                    var badgeClass = order.Status switch
                                                    {
                                                        0 => "bg-primary",
                                                        1 => "bg-warning text-dark",
                                                        2 => "bg-success",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@order.StatusDisplay</span>
                                            </td>
                                            <td>@order.Duration.ToString(@"hh\:mm")</td>
                                            <td>@order.ItemCount</td>
                                            <td>$@order.TotalAmount.ToString("F2")</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No active orders at the moment.
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Completed Orders Today</h5>
                </div>
                <div class="card-body">
                    @if (Model.CompletedOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Type</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.CompletedOrders)
                                    {
                                        <tr>
                                            <td>@order.OrderNumber</td>
                                            <td>@order.OrderTypeDisplay</td>
                                            <td>$@order.TotalAmount.ToString("F2")</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="alert alert-success mt-3">
                            <strong>Total Completed Orders:</strong> @Model.CompletedOrdersCount<br />
                            <strong>Total Sales:</strong> $@Model.TotalSales.ToString("F2")
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No completed orders today.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#activeOrders').DataTable({
                order: [[5, 'desc']], // Sort by duration by default
                pageLength: 10
            });
            
            // Auto-refresh the page every 2 minutes
            setTimeout(function() {
                location.reload();
            }, 120000);
        });
    </script>
}
