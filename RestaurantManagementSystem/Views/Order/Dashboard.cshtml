@model OrderDashboardViewModel
@{
    ViewData["Title"] = "Order Dashboard";
}

<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> New Order
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Compact styling *@
    <style>
        .card { border-radius: 8px; }
        .card-header { padding: .5rem .75rem; }
        .card-body { padding: .75rem; }
        table.table { font-size: .9rem; }
        table.table td, table.table th { padding: .4rem .5rem; vertical-align: middle; }
        thead.sticky th { position: sticky; top: 0; z-index: 2; }
        .metric-card .card-body { padding: .6rem .8rem; }
        .metric-card h5 { font-size: .95rem; margin-bottom: .25rem; }
        .metric-card h2 { font-size: 1.6rem; margin: 0; }
        .badge { font-size: .75rem; }
        .btn-group .btn { padding: .2rem .4rem; }
        .table-container { max-height: 28vh; overflow: auto; }
    </style>

    @* Metrics row improvements *@
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card bg-primary text-white metric-card">
                <div class="card-body">
                    <h5>Open Orders</h5>
                    <h2>@Model.OpenOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark metric-card">
                <div class="card-body">
                    <h5>In Progress</h5>
                    <h2>@Model.InProgressOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white metric-card">
                <div class="card-body">
                    <h5>Ready</h5>
                    <h2>@Model.ReadyOrdersCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white metric-card">
                <div class="card-body">
                    <h5>Today's Sales</h5>
                    <h2>$@Model.TotalSales.ToString("F2")</h2>
                </div>
            </div>
        </div>
    </div>

    @* Consolidate lists into a single full-width column *@
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Active Orders (All Pending Orders)</h5>
                    <small class="text-muted">Shows all orders that are not yet completed or paid</small>
                </div>
                <div class="card-body">
                    @if (Model.ActiveOrders.Any())
                    {
                        <div class="table-responsive table-container">
                            <table class="table table-striped table-hover" id="activeOrders">
                                <thead class="table-dark sticky">
                                    <tr class="text-center">
                                        <th>Order #</th>
                                        <th>Type</th>
                                        <th>Table/Customer</th>
                                        <th>Server</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Duration</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.ActiveOrders)
                                    {
                                        <tr class="align-middle text-center">
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.OrderTypeDisplay</td>
                                            <td>
                                                @if (order.OrderType == 0) // Dine-In
                                                {
                                                    @(order.TableName ?? "No Table")
                                                }
                                                else
                                                {
                                                    @(order.GuestName ?? "No Name")
                                                }
                                            </td>
                                            <td>@(order.ServerName ?? "Unassigned")</td>
                                            <td>
                                                @{
                                                    var badgeClass = order.Status switch
                                                    {
                                                        0 => "bg-primary",
                                                        1 => "bg-warning text-dark",
                                                        2 => "bg-success",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@order.StatusDisplay</span>
                                            </td>
                                            <td>@order.CreatedAt.ToString("dd/MM HH:mm")</td>
                                            <td>@order.Duration.ToString(@"hh\:mm")</td>
                                            <td>@order.ItemCount</td>
                                            <td><strong>$@order.TotalAmount.ToString("F2")</strong></td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary" title="View Order">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="CancelOrder" asp-route-id="@order.Id" class="btn btn-sm btn-outline-danger" 
                                                       title="Cancel Order" onclick="return confirm('Are you sure you want to cancel this entire order? This action cannot be undone.');">
                                                        <i class="fas fa-times-circle"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">No active orders at the moment.</div>
                    }
                </div>
            </div>

            <!-- Cancelled Orders Section -->
            <div class="card mt-3">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Cancelled Orders</h5>
                </div>
                <div class="card-body">
                    @if (Model.CancelledOrders != null && Model.CancelledOrders.Any())
                    {
                        <div class="table-responsive table-container">
                            <table class="table table-striped table-hover" id="cancelledOrders">
                                <thead class="table-dark sticky">
                                    <tr class="text-center">
                                        <th>Order #</th>
                                        <th>Type</th>
                                        <th>Table/Customer</th>
                                        <th>Server</th>
                                        <th>Status</th>
                                        <th>Time</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.CancelledOrders)
                                    {
                                        <tr class="align-middle text-center">
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.OrderTypeDisplay</td>
                                            <td>
                                                @if (order.OrderType == 0) { @(order.TableName ?? "No Table") }
                                                else { @(order.GuestName ?? "No Name") }
                                            </td>
                                            <td>@(order.ServerName ?? "Unassigned")</td>
                                            <td><span class="badge bg-secondary">Cancelled</span></td>
                                            <td>@order.Duration.ToString(@"hh\:mm")</td>
                                            <td>@order.ItemCount</td>
                                            <td><strong>$@order.TotalAmount.ToString("F2")</strong></td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary" title="View Order">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">No cancelled orders today.</div>
                    }
                </div>
            </div>

            <!-- Completed Orders Section moved below Cancelled -->
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Completed Orders Today</h5>
                </div>
                <div class="card-body">
                    @if (Model.CompletedOrders.Any())
                    {
                        <div class="table-responsive table-container">
                            <table class="table table-sm table-striped table-hover" id="completedOrders">
                                <thead class="table-secondary sticky">
                                    <tr class="text-center">
                                        <th>Order #</th>
                                        <th>Type</th>
                                        <th>Total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.CompletedOrders)
                                    {
                                        <tr class="align-middle text-center">
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.OrderTypeDisplay</td>
                                            <td><strong>$@order.TotalAmount.ToString("F2")</strong></td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary" title="View Order">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="alert alert-success mt-2 mb-0 py-2">
                            <strong>Total Completed:</strong> @Model.CompletedOrdersCount
                            <span class="mx-2">|</span>
                            <strong>Total Sales:</strong> $@Model.TotalSales.ToString("F2")
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">No completed orders today.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#activeOrders').DataTable({
                order: [[5, 'desc']],
                paging: false,
                info: false,
                searching: true,
                scrollY: '28vh',
                scrollCollapse: true
            });
            $('#cancelledOrders').DataTable({
                order: [[5, 'desc']],
                paging: false,
                info: false,
                searching: true,
                scrollY: '28vh',
                scrollCollapse: true
            });
            $('#completedOrders').DataTable({
                order: [[0, 'desc']],
                paging: false,
                info: false,
                searching: true,
                scrollY: '28vh',
                scrollCollapse: true
            });

            // Keep dashboard fresh
            setTimeout(function() { location.reload(); }, 120000);
        });
    </script>

    @* Enhance Active Orders table header and details *@
    <script>
        // Tooltips
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.map(function (tooltipTriggerEl) { return new bootstrap.Tooltip(tooltipTriggerEl) })
        });
    </script>
}
