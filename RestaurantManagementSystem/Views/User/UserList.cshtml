@model IEnumerable<RestaurantManagementSystem.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="container">
    <div class="row my-3">
        <div class="col-md-6">
            <h2>Users</h2>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-action="UserForm" class="btn btn-primary">Create New</a>
        </div>
    </div>

    @if (TempData["ResultMessage"] != null)
    {
        <div class="alert alert-info">@TempData["ResultMessage"]</div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <div class="table-responsive">
        <table class="table table-striped" id="userTable">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@(user.Roles != null && user.Roles.Any() ? string.Join(", ", user.Roles.Select(r => r.Name)) : "-")</td>
                        <td>@(user.IsActive ? "Active" : "Inactive")</td>
                        <td>
                            <a asp-action="UserForm" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="UserForm" asp-route-id="@user.Id" asp-route-isView="true" class="btn btn-sm btn-info">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable();
        });
    </script>
}
